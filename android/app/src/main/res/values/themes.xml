<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema base do aplicativo -->
    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.MyApp.Splash" parent="Theme.SplashScreen">
        <!-- Cor de fundo da splash screen -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- Ícone animado exibido durante a splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        
        <!-- Duração da animação (opcional) -->
        <item name="windowSplashScreenAnimationDuration">500</item>
        
        <!-- Tema que será aplicado após a splash screen -->
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
    </style>
</resources>